{
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "outDir": "./public/",
    "rootDir": "./src",
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "typeRoots": [ "./customTypings", "node_modules/@types"],
  },
  "exclude": ["node_modules", "types"],
  "include": [
    "src/*.ts",
    "src/ts/*.ts",
    "src/ts/**/*.ts",
  ]
}